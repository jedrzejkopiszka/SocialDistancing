            <Slider fx:id="distanceSlider" majorTickUnit="50.0" max="200.0" min="10.0" showTickLabels="true" showTickMarks="true" />
            <Label text="Ticks" />
            <TextField fx:id="tickText" />
         </children>
      </VBox>
   </left>
</BorderPane>
